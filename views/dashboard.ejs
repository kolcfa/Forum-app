<%- include('header', { title: 'Dashboard' }) %>

<div class="container my-5">
  <h1 class="mb-4">Welcome, <%= user.name %>!</h1>
  <div class="row">
    <div class="col-md-8">
      <h2>Latest Posts</h2>
      <% if (posts.length === 0) { %>
        <p>No posts available.</p>
      <% } else { %>
        <ul class="list-group">
          <% posts.forEach(function(post) { %>
            <li class="list-group-item">
              <a href="/posts/<%= post._id %>"><strong><%= post.title %></strong></a>
              <br>
              <small>By <%= post.author.name %> on <%= post.createdAt.toDateString() %></small>
            </li>
          <% }); %>
        </ul>
      <% } %>
      <a href="/posts" class="btn btn-link mt-3">View All Posts</a>
    </div>
    <div class="col-md-4">
      <h2>Your Info</h2>
      <div class="card">
        <div class="card-body">
          <p><strong>Name:</strong> <%= user.name %></p>
          <p><strong>Email:</strong> <%= user.email %></p>
        </div>
      </div>
    </div>
  </div>
</div>
